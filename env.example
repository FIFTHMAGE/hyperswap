# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# =============================================================================
# REQUIRED - Application will not work without these
# =============================================================================

# WalletConnect Project ID
# Get your free project ID from: https://cloud.walletconnect.com
# Required for wallet connection functionality
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Covalent API Key
# Get your API key from: https://www.covalenthq.com/platform/auth/register
# Required for blockchain data fetching
COVALENT_API_KEY=your_covalent_api_key_here

# =============================================================================
# OPTIONAL - Application Configuration
# =============================================================================

# Application URL
# Used for metadata and social sharing
# Default: http://localhost:3000 (development)
# Production: Set to your deployed URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node Environment
# Options: development | production | test
# Default: development
NODE_ENV=development

# =============================================================================
# OPTIONAL - Feature Flags
# =============================================================================

# Enable analytics tracking
# Default: false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable Sentry error tracking
# Default: false  
NEXT_PUBLIC_ENABLE_SENTRY=false

# Sentry DSN (only needed if ENABLE_SENTRY=true)
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# OPTIONAL - API Configuration
# =============================================================================

# Custom RPC endpoints (comma-separated)
# Leave empty to use default public RPCs
NEXT_PUBLIC_CUSTOM_RPC_URLS=

# API Rate Limiting
# Requests per minute
API_RATE_LIMIT=60

# =============================================================================
# DEVELOPMENT - Only needed for local development
# =============================================================================

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Enable detailed error messages
NEXT_PUBLIC_SHOW_ERRORS=true
